<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/skinColor1_2</item>
        <item name="colorPrimaryDark">@color/skinColor1_3</item>
        <item name="colorAccent">@color/skinColor1_1</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/skinColor2_2</item>
        <item name="colorPrimaryDark">@color/skinColor2_3</item>
        <item name="colorAccent">@color/skinColor2_1</item>
    </style>

    <style name="AppTheme3" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/skinColor3_2</item>
        <item name="colorPrimaryDark">@color/skinColor3_3</item>
        <item name="colorAccent">@color/skinColor3_1</item>
    </style>
    <style name="AppTheme4" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/skinColor4_2</item>
        <item name="colorPrimaryDark">@color/skinColor4_3</item>
        <item name="colorAccent">@color/skinColor4_1</item>
    </style>

    <style name="AppTheme5" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/skinColor5_2</item>
        <item name="colorPrimaryDark">@color/skinColor5_3</item>
        <item name="colorAccent">@color/skinColor5_1</item>
    </style>

    <style name="AppTheme6" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/skinColor6_2</item>
        <item name="colorPrimaryDark">@color/skinColor6_3</item>
        <item name="colorAccent">@color/skinColor6_1</item>
    </style>

    <style name="AppWelcome" parent="AppTheme">
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--水平分隔线-->
    <style name="common_horizontal_division_line_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">#dddddd</item>
    </style>

</resources>
